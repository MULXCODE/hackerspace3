%article
  %div
    %h3= event.name
    %h4= event.region.name
    - if event.event_type == CONNECTION_EVENT || event.event_type == AWARD_EVENT
      - unless event.start_time.blank?
        %h4= event.start_time.strftime("%e %B %Y")
      - unless event.end_time.blank?
        %h4= event.start_time.strftime("%I.%M %p")
      %p
        = event.event_type
        Event
