- content_for :title, 'All Profiles'
%main.profiles_page_test
  %section.header
    %h2 GovHack 2020 Profiles
    %h3 Find a Participant, Mentor, Industry partner, or GovHack Support here.

    - if user_signed_in?
      - if current_user.profile&.published
        %p Your Profile is Published
      - else
        %p
          %strong= link_to 'Publish Your Profile', edit_profile_path(current_user.profile)
    - else
      %p Sign up to create your Profile

  %section.table-wrapper
    %h2= yield :title
    %table.profiles-table#projects_table{'data-turbolinks' => 'false'}
      %thead
        %th Name
        %th Category
        %th Region
        %th Team Status
        %th Skills
      %tbody
        - @profiles.each do |profile|
          %tr
            %td
              %strong= link_to "#{profile.user.display_name}", profile_path(profile)
            %td= profile.user.category
            %td= profile.user.region
            %td= profile.team_status
            %td= profile.skills.map {|tag|"##{tag}"}.join(' ')
