- content_for :title, 'Update Team Details'
%main.team_page
  %section
    %h2 Update Details for #{@team.name}
    = form_for [:team_management, @team] do |form|
      .form-group
        = form.label :event_id
        = form.select :event_id, options_from_collection_for_select(@events, :id, :name, @team.event_id.to_s)
      .custom-control.custom-checkbox
        = form.check_box :youth_team, class: 'custom-control-input'
        = form.label :youth_team, 'Is your team a youth team (made up by at least 75% people aged under 18 years old)?', class:'custom-control-label'
      .actions
        = form.submit
    %div.links
    = link_to 'Back to Team', team_management_team_path(@team)
