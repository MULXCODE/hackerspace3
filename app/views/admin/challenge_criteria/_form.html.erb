<%= form_for [:admin, @challenge, @challenge_criterion] do |form| %>

  <%= form.label :criterion_id %><br>
  <%= form.select(:criterion_id, options_from_collection_for_select(@available_criteria, :id, :name, @challenge_criterion.criterion_id.to_s)) %><br>

  <%= form.label :description %><br>
  <%= form.text_area :description %><br>

  <%= form.submit %>
<% end %>
