<%= form_for [:admin, @competition, @checkpoint] do |form| %>

  <%= form.label :name %><br>
  <%= form.text_field :name %><br>

  <%= form.label :end_time %><br>
  <%= form.datetime_local_field :end_time %><br>

  <%= form.label :max_national_challenges %><br>
  <%= form.number_field :max_national_challenges, { value: @checkpoint.max_national_challenges, min: MIN_CHALLENGE_ENTRY, step: 1 } %><br>

  <%= form.label :max_regional_challenges %><br>
  <%= form.number_field :max_regional_challenges, { value: @checkpoint.max_regional_challenges, min: MIN_CHALLENGE_ENTRY, step: 1 } %><br>

  <%= form.submit %>
<% end %>
