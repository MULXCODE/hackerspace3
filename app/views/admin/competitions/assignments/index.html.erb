<h2>Competiton Assignments</h2>

<h3>Competition Director</h3>

<% if (director = @competition.director).present? %>
  <%= render 'admin/shared/user_contact', locals: { user: director } %>
<% else %>
  This competition does not currently have a director.<br>
  <%= link_to "New #{COMPETITION_DIRECTOR} Assignment", new_admin_competition_assignment_path(@competition, title: COMPETITION_DIRECTOR) %><br>
<% end %>

