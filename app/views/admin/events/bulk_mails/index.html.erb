<main class="team_page">
  <h2>Bulk Mails for <%= @event.name %></h2>

  <%= link_to 'New Bulk Mail', new_admin_event_bulk_mail_path(@event) %>

  <% if @bulk_mails.present? %>
    <% @bulk_mails.each do |bulk_mail| %>
      <h3><%= bulk_mail.name %></h3>
      <p>Created At: <%= bulk_mail.created_at %></p>
      <p>Status: <%= bulk_mail.status %></p>
      <p><%= link_to 'Go to Bulk Mail', admin_event_bulk_mail_path(@event, bulk_mail) %></p>
    <% end %>
  <% else %>
    <p>There are no bulk mails for this event.</p>
  <% end %>
</main>
<%= link_to "Back to #{@event.name}", admin_region_event_path(@region, @event) %>
