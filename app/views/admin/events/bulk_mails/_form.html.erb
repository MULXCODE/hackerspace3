<%= form_for [:admin, @event, @bulk_mail] do |form| %>
    <%= form.label :name %></br>
    <%= form.text_field :name %></br>

    <%= form.label :from_email %></br>
    <%= form.email_field :from_email %></br>

    <%= form.label :subject %></br>
    <%= form.text_field :subject %></br>

    <%= form.label :body %></br>
    <%= form.text_area :body %></br>
    <ul>
      <li>{ display_name } - To insert a Participant's Preferred Name.</li>
    </ul>
    <%= form.submit %>
<% end %>
