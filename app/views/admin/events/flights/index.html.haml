%main.team_page
  %h2
    Flights for #{@event.name}
  %p= link_to 'New Flight', new_admin_event_flight_path(@event)
  %h3 Inbound Flights
  - if @inbound_flights.present?
    - @inbound_flights.each do |flight|
      %p
        %strong= flight.description
      %p
        = link_to 'Edit Flight', edit_admin_event_flight_path(@event, flight)
        |
        \#{link_to 'Destroy Flight', admin_event_flight_path(@event, flight), data: { confirm: "Are you sure?" }, method: :delete}
  - else
    %p No inbound flights currently saved for this event.
  %h3 Outbound Flights
  - if @outbound_flights.present?
    - @outbound_flights.each do |flight|
      %p
        %strong= flight.description
      %p
        = link_to 'Edit Flight', edit_admin_event_flight_path(@event, flight)
        |
        \#{link_to 'Destroy Flight', admin_event_flight_path(@event, flight), data: { confirm: "Are you sure?" }, method: :delete}
  - else
    %p No outbound flights currently saved for this event.
  %p= link_to 'Back to Event', admin_region_event_path(@region, @event)
