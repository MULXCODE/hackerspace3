<%= form_for [:admin, @sponsor] do |form| %>
  <% if @sponsor.logo.attached? %>
    <img src="<%= url_for(@sponsor.logo) %>" alt="<%= "#{@sponsor.name} logo" %>" /><br>
  <% else %>
    <%= image_tag "default_profile_pic.png" %><br>
  <% end %>

  <%= form.label :logo, 'Upload a New Logo (only png/gif/jpeg/jpg)' %><br>
  <%= form.file_field :logo, accept: 'image/png,image/gif,image/jpeg' %><br>
  <%= hidden_field_tag(:logo, true) %>
  <% if @sponsor.logo.attached? %>
    <%= form.submit 'Replace Logo' %>
  <% else %>
    <%= form.submit 'Upload Logo' %>
  <% end %>
<% end %>
