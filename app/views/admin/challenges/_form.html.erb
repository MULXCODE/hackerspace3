<%= form_for [:admin, @region, @challenge] do |form| %>

  <%= form.label :name %>
  <%= form.text_field :name %><br>

  <%= form.label :short_desc %>
  <%= form.text_area :short_desc %><br>

  <%= form.label :long_desc %>
  <%= form.text_area :long_desc %><br>

  <%= form.label :eligibility %>
  <%= form.text_area :eligibility %><br>

  <%= form.label :video_url %>
  <%= form.url_field :video_url %><br>

  <% if current_user.admin_privileges? %>
    <%= form.label :approved %>
    <%= form.check_box :approved, { checked: @challenge.approved } %><br>
  <% end %>

  <%= form.submit %>

<% end %>
