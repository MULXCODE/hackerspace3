<main class="project_index">
  <h2>Teams for <%= @competition.name %></h2>

  <%= form_tag admin_teams_path, method: :get do %>
    <%= search_field_tag :term, params[:term] %>
    <%= submit_tag 'Search' %>
  <% end %>
  <p><%= link_to 'Clear Search', admin_teams_path %></p>
  <p><%= link_to 'Download CSV (Users who are members of a published team)', admin_teams_path(format: 'csv') %></p>
  <p><%= link_to 'Download CSV (Every Team Member)', admin_teams_path(format: 'csv', category: 'members') %></p>

  <table>
  	<thead>
  		<th>Project</th>
  		<th>Team</th>
  		<th>Location</th>
  	</thead>
  	<tbody>
    <% filter_projects(params[:term]).each do |project| %>
    <tr>
      <td><%= link_to "#{project.project_name}", admin_team_path(project.team) %></td>
      <td><%= project.team_name %></td>
      <td><%= project.event.name %></td>
    </tr>
    <% end %>
  	</tbody>
  </table>
</main>
<p><%= link_to 'Back to Account Management', manage_account_path %></p>
