%main.project_index
  %h2
    Teams for #{@competition.name}
  = form_tag admin_teams_path, method: :get do
    = search_field_tag :term, params[:term]
    = submit_tag 'Search'
  %p= link_to 'Clear Search', admin_teams_path
  %p= link_to 'Download CSV (Users who are members of a published team)', admin_teams_path(format: 'csv')
  %p= link_to 'Download CSV (Every Team Member)', admin_teams_path(format: 'csv', category: 'members')
  %table
    %thead
      %th Project
      %th Team
      %th Location
    %tbody
      - filter_projects(params[:term]).each do |project|
        %tr
          %td= link_to "#{project.project_name}", admin_team_path(project.team)
          %td= project.team_name
          %td= project.event.name
%p= link_to 'Back to Account Management', manage_account_path
