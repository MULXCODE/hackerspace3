<h2>Create New Event Partner for <%= @event.name %></h2>

<%= form_tag(new_admin_event_event_partnership_path, method: :get) do %>
  <%= search_field_tag :term, params[:term] %>
  <%= submit_tag 'Search' %>
<% end %>

<% if @sponsor.present? %>

  <h3><%= @sponsor.name %></h3>

  <% unless @existing_event_partnership.present? %>

    <p><%= link_to "Create new Event Partnership with #{@sponsor.name}",
      admin_event_event_partnerships_path(@event, @event_partnership,
      event_partnership: { sponsor_id: @sponsor.id }), method: :post %></p>

  <% else %>
    <p>Event Partnership for <%= @sponsor.name %> to <%= @event.name %> already exists.</p>
  <% end %>

<% elsif @sponsors.present? %>

  <% @sponsors.each do |sponsor| %>
  <h3><%= sponsor.name %></h3>
    <p><%= link_to 'Select', new_admin_event_event_partnership_path(@event, term: sponsor.name) %></p>
  <% end %>

<% elsif params[:term].present? %>

  <p>Apologies, no sponsor name matching search term '<%= params[:term] %>'</p>

<% else %>

  <p>Please enter a sponsor name above.</p>

<% end %>

<p><%= link_to "Back to #{@event.name} Event", admin_region_event_path(@event.region, @event) %></p>
