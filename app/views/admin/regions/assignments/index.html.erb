<h2><%= @region.name %> Region Assignments</h2>

<h3>Region Director</h3>

<% if (director = @region.director).present? %>
  <%= render 'admin/shared/user_contact', locals: { user: director } %>
<% else %>
  This region does not currently have a director.<br>
  <%= link_to "New #{REGION_DIRECTOR} Assignment", new_admin_region_assignment_path(@region, title: REGION_DIRECTOR) %><br>
<% end %>

<h3>Region Support</h3>

<% if (supports = @region.supports).present? %>
  <% supports.each do |support| %>
    <%= render 'admin/shared/user_contact', locals: { user: support } %>
  <% end %>
<% else %>
  This region does not currently have any supports.<br>
<% end %>
<%= link_to "New #{REGION_SUPPORT} Assignment", new_admin_region_assignment_path(@region, title: REGION_SUPPORT) %><br>
<%= link_to "Back to #{@region.name} Region", admin_region_path(@region) %>
