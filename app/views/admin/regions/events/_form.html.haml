= form_for [:admin, @region, @event] do |form|
  = form.check_box :published, { checked: @event.published }
  = form.label :published
  = form.label :name
  = form.text_field :name
  = form.label :registration_type
  = form.select(:registration_type, options_for_select(EVENT_REGISTRATION_TYPES, @event.registration_type))
  = form.label :event_type
  = form.select(:event_type, options_for_select(EVENT_TYPES, @event.event_type))
  = form.label :capacity
  = form.number_field :capacity
  = form.label :description
  = form.text_area :description
  = form.label :start_time
  = form.datetime_local_field :start_time
  = form.label :end_time
  = form.datetime_local_field :end_time
  = form.label :email
  = form.email_field :email
  = form.label :twitter
  = form.text_field :twitter
  = form.label :address
  = form.text_area :address
  = form.label :place_id, 'Google Place ID'
  = form.text_field :place_id
  = link_to 'Use this link to find your Event Location\'s Google Place ID', 'https://developers.google.com/places/place-id', { target: '_blank' }
  = form.label :video_id, 'YouTube Video ID'
  = form.text_field :video_id
  = form.label :accessibility
  = form.text_area :accessibility
  = form.label :youth_support
  = form.text_area :youth_support
  = form.label :parking
  = form.text_area :parking
  = form.label :public_transport
  = form.text_area :public_transport
  = form.label :operation_hours
  = form.text_area :operation_hours
  = form.label :catering
  = form.text_area :catering
  = form.label :catering
  = form.text_area :catering
  = form.submit
