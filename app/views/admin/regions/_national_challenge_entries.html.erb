<table class="projects-table" data-turbolinks="false" id="regional-challenge-entries-table">
  <thead>
    <th>Challenges</th>
    <% @region_names.each do |region_name| %>
      <th>
        <%= region_name %>
      </th>
    <% end %>
    <th>Total Entries</th>
  </thead>
  <tbody>
    <% @challenge_names.each do |challenge_name| %>
      <tr>
        <td>
          <%= challenge_name %>
        </td>
        <% @region_names.each do |region_name| %>
          <td>
            <%= @region_counts[challenge_name][region_name] %>
          </td>
        <% end %>
        <td>
          <%= @region_counts[challenge_name][:total_entries] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
