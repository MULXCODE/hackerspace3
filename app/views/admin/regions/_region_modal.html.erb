<% heading = locals[:heading] %>
<% region = locals[:region] %>

<<%= 'h' + heading.to_s %>>
  <%= region.name %>
</<%= 'h' + heading.to_s %>>

<% if region.time_zone %>
  Time Zone: <%= region.time_zone %></br>
<% end %>

<% if (director = region.director).present? %>
  Director: <%= director.full_name %></br>
<% end %>

<%= link_to "Manage #{region.name} Region", admin_region_path(region.id) %>

<% region.sub_regions.each do |region| %>
  <%= render 'region_modal', locals: { region: region, heading: heading + 1 } %>
<% end %>
