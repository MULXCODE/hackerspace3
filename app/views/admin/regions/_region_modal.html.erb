<% region = locals[:region] %>

<h3><%= region.name %></h3>

<% if region.time_zone %>
  <p>Time Zone: <%= region.time_zone %></p>
<% end %>
<% if (director = region.director).present? %>
  <h4> Region Director</h4>
  <%= render 'admin/shared/user_contact', locals: { user: director } %>
<% end %>

<p><%= link_to "Manage #{region.name} Region", admin_competition_region_path(@competition, region) %></p>
