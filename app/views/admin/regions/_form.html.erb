<%= form_for [:admin, @competition, @region] do |f| %>
  <%= f.label :name, "Region name:" %><br>
  <%= f.text_field :name %><br>
  <%= f.label :time_zone, "Time zone:" %><br>
  <%= f.select :time_zone, options_from_collection_for_select(ActiveSupport::TimeZone.country_zones('AU'), :name, :name, @region.time_zone) %><br>
  <%= f.label :award_release %>
  <%= f.datetime_local_field :award_release %>
  <p><strong>Times are saved as Sydney time.</strong></p>
  <%= f.submit %>
<% end %>
