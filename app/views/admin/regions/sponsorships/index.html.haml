- content_for :title, "Sponsorships for #{@region.name} Region"
%main.project_index
  %h2= yield :title
  = link_to 'New Sponsorship', new_admin_region_sponsorship_path(@region), class: 'download-csv'
  - if @sponsorships.present?
    - @sponsorships.each do |sponsorship|
      = render 'admin/sponsors/sponsor', locals: { sponsor: sponsorship.sponsor }
      %p
        Sponsorship Type: #{sponsorship.sponsorship_type.name}
  - else
    %p There are currently no sponsorships for this region in the current competition.
%p= link_to "Back to #{@region.name} Region", admin_competition_region_path(@competition, @region)
