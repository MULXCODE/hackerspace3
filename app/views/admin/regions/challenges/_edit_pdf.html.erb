<%= form_for [:admin, @region, @challenge] do |form| %>
  <%= form.label :pdf, 'Upload a PDF' %>
  <br/>
  <%= form.file_field :pdf, accept: '.pdf' %>
  <br/>
  <%= hidden_field_tag(:pdf, true) %>
  <% if @challenge.pdf.attached? %>
    <%= form.submit 'Replace PDF' %>
  <% else %>
    <%= form.submit 'Upload PDF' %>
  <% end %>
<% end %>
<%= link_to "Back to Challenge", admin_region_challenge_path(@region, @challenge) %>
<br/>
<% if @challenge.pdf.attached? %>
  <embed height="2100px" src="<%= url_for(@challenge.pdf) %>" width="800px"></embed>
<% else %>
  <strong>No PDF currently attached.</strong>
  <br/>
<% end %>
