<table class="projects-table" data-turbolinks="false" id="national-challenge-entries-table">
  <thead>
    <th>Challenges</th>
    <% @event_names.each do |event_name| %>
      <th>
        <%= event_name %>
      </th>
    <% end %>
    <th>Total Entries</th>
  </thead>
  <tbody>
    <% @challenge_names.each do |challenge_name| %>
      <tr>
        <td>
          <%= challenge_name %>
        </td>
        <% @event_names.each do |event_name| %>
          <td>
            <%= @event_counts[challenge_name][event_name] %>
          </td>
        <% end %>
        <td>
          <%= @event_counts[challenge_name][:total_entries] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
