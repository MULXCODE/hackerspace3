<main class="project_index">

<h2>Team Projects for Competition <%= @competition.year %></h2>

<% if @competition.started? %>

  <%= form_tag teams_path, method: :get do %>
    <%= text_field_tag :term, params[:term] %>
    <%= submit_tag 'Search' %>
  <% end %>
  <%= link_to 'Clear Search', teams_path %></br>
  <%= link_to 'Download CSV', teams_path(format: 'csv') %></br>

  <% filter_teams(@teams, params[:term]).each do |team| %>
    <h3><%= @id_teams_projects[team.id][:current_project].team_name %></h3>
    <%= link_to 'Go to Team', team_path(team) %><br>
  <% end %>

<% else %>
<section class="later">
  <strong>Check back here at the commencement of the competition at <%= @competition.start_time.strftime("%I.%M %p %e %B %Y") %>.</stong>
</section>
<% end %>
